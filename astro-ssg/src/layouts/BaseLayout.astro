---
import "@/styles/base.css";
import type { ComponentProps } from "astro/types";
import BaseHead from "@/layouts/BaseHead.astro";
import Header from "@/components/blocks/Header/Header";

interface Props extends ComponentProps<typeof BaseHead> {
  layoutClasses?: string;
}

const { title, description, layoutClasses } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <BaseHead title={title} description={description}>
      <slot name="head" />
      <script is:inline src="/js/theme-loader.js"></script>
    </BaseHead>
  </head>
  <body class="grid h-screen grid-rows-[auto_1fr_auto]">
    <Header client:only="react" />
    <main class:list={["", layoutClasses]}>
      <slot />
    </main>
    <footer>Footer</footer>
  </body>
</html>
