---
import { Button } from "@/components/ui/button";
import ThemeToggle from "@/components/utility/ThemeToggle";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="Page Not Found" layoutClasses="my-0" is404>
  <div class="grid h-screen place-items-center">
    <div>
      <div class="mb-11 flex items-center justify-center gap-3">
        <ThemeToggle
          client:only="react"
          variant={"outline"}
          size={"icon"}
          className="rounded-full"
          iconProps={{ className: "size-5" }}
        />
      </div>
      <h1 class="text-3xl font-black">404 - Page Not Found</h1>
      <p class="text-sm text-muted-foreground">
        Sorry, the page you are looking for does not exist.
      </p>

      <a href="/">
        <Button variant={"ghost"} className="mt-8 w-full">Back to home</Button>
      </a>
    </div>
  </div>
</BaseLayout>
